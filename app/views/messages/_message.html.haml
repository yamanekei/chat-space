.main_chat__message-list__box
  .main_chat__message-list__box__date
    .main_chat__message-list__box__date
      = message.user.name
    .main_chat__message-list__box__date__time
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .main_chat__message-list__box__message
    - if message.content.present?
      %p.main_chat__message-list__box__message__text
        = message.content
    = image_tag message.image.url, class: '.main_chat__message-list__box__message__image' if message.image.present?